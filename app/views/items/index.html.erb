<div class="menu-grid app-pages app-section">
  <div class="container">
    <div class="pages-title">
      <h3>Menu</h3>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <div data-controller="search-menu">
        <%= form_with url: items_index_path, method: :get, html: {class: "mb-4", data: {search_menu_target: "form", action: "submit->search-menu#clear"}} do |f| %>
          <%= f.label :query, "Search a dish" %>
          <%= f.text_field :query,
                           class: "form-control",
                           value: params[:query],
                           data: {
                             search_menu_target: "input",
                             action: "keyup->search-menu#update"
                            }
                           %>
        <% end %>
        <div data-search-menu-target="list" class="d-none">
         <%= render "list", items: @items %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container" data-controller="cart-number">
  <div class="accordion" id="accordionExample">
    <div class="accordion-item" data-bs-toggle="collapse">
      <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Rice
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row">
            <% @rice_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>Rp <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item" data-bs-toggle="collapse">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Animal Protein
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row">
            <% @animal_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>Rp <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item" data-bs-toggle="collapse">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Plant Protein
        </button>
      </h2>
      <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row" >
            <% @plant_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>Rp <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item" data-bs-toggle="collapse">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
          Vegetables
        </button>
      </h2>
      <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row">
            <% @veg_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>Rp <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= form_with(model: @order, method: :post) do |f| %>
      <%= f.hidden_field :item_ids, data: { cart_number_target: 'items' } %>
      <%= f.submit "Next", class: "btn btn-warning col-12 my-2"%>
    <% end %>
  </div>
</div>
