<div class="container" data-controller="cart-number">
  <div class="menu-grid app-pages app-section">
    <div class="container">
      <div class="pages-title">
        <h3>Menu Grid</h3>
      </div>
    </div>
  </div>
  <div class="accordion" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Rice
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row">
            <% @rice_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>$ <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Animal Protein
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row">
            <% @animal_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>$ <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Plant Protein
        </button>
      </h2>
      <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row" >
            <% @plant_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>$ <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Vegetables
        </button>
      </h2>
      <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class="row">
            <% @veg_items.each do |item| %>
              <div class="col-6">
                <div class="entry">
                  <%= image_tag item.photo, alt: "text" %>
                  <h6><%= item.name %></h6>
                  <div class="price">
                    <h5>$ <%= item.price %></h5>
                  </div>
                  <button class="button" data-cart-number-target='addButton' data-action='click->cart-number#addToCart'
                    data-item-id="<%= item.id %>">Add to cart
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
    <%= form_with(model: @order, method: :post) do |f| %>
      <%= f.hidden_field :item_ids, data: { cart_number_target: 'items' } %>
      <%= f.submit "Next", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
